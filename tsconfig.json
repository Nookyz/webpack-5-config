{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@components/*": ["./components/*"],
      "@containers/*": ["./containers/*"]
    }
  },
  "include": ["src/**/*", "webpack.config.ts"],
  "exclude": ["node_modules"]
}